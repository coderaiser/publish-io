{
  "name": "wisdom",
  "version": "4.1.0",
  "author": "coderaiser <mnemonic.enemy@gmail.com> (https://github.com/coderaiser)",
  "description": "Tool for publishing releases to github and npm",
  "homepage": "http://github.com/coderaiser/wisdom",
  "main": "lib/wisdom.js",
  "bin": {
    "wisdom": "bin/wisdom.js",
    "wisdom_": "legacy/bin/wisdom.js"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-assign"
    ]
  },
  "scripts": {
    "6to5:lib": "babel lib -d legacy/lib",
    "6to5:bin": "babel bin -d legacy/bin",
    "legacy:index": "echo \"module.exports = require('./lib/wisodm');\" > legacy/index.js",
    "legacy:json": "echo \"module.exports = require('../package');\" > legacy/package.js",
    "build": "redrun 6to5:* legacy:*",
    "wisdom": "npm run build; echo $wisdom_version",
    "wisdom:done": "npm i -g",
    "lint": "redrun lint:*",
    "lint:eslint": "eslint lib",
    "lint:eslint:bin": "eslint --rule 'no-console:0' bin"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/coderaiser/wisdom.git"
  },
  "dependencies": {
    "async": "^2.1.4",
    "changelog-io": "^1.4.0",
    "grizzly": "^2.0.0",
    "jessy": "^2.0.0",
    "minor": "^1.2.0",
    "prepend": "^1.0.1",
    "readjson": "^1.1.0",
    "rendy": "^1.1.0",
    "spawnify": "^3.0.0",
    "version-io": "^1.2.0",
    "writejson": "^1.1.1"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^3.14.1",
    "redrun": "^5.9.6"
  }
}
